<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMS OSIGURANJE"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>
    <include layout="@layout/back_button" />

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="0dip"
        android:layout_weight="1">
        <ListView
            android:id="@+id/itemList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="@color/light_gray_v2"
            android:dividerHeight="1dp"
            android:scrollbars="none"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/blue_text_main"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:background="@color/yellow"
        android:text="Aktuelno"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_v2"
        android:paddingBottom="5dp"
        android:orientation="vertical">
    <TextView
        android:padding="15dp"
        android:id="@+id/trending1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_text_main"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/blue_text"/>
    <TextView
        android:padding="15dp"
        android:id="@+id/trending2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_text_main" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#273e66">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/footer_logo"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:src="@drawable/footer_call_center"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>