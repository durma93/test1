<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar" />
    <include layout="@layout/subtitlebar" />
    <include layout="@layout/back_button" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/kartice"/>

    <TextView
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Besplatna pomoć na putu u zemlji i Evropi!"
        android:textColor="#273e66"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:textSize="13sp"
        android:textColor="@color/text"
        android:text="@string/loyalty_benefits_info_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text"
        android:text="@string/loyalty_benefits_info_2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/primary_button"
            android:text="ULOGUJ SE"
            android:textColor="#273e66"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/postaniclan"
            android:layout_width="270dp"
            android:layout_marginTop="10dp"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:text="POSTANI ČLAN"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_below="@id/loginButton"
            android:textColor="#ffffff"
            android:background="@drawable/blue_border_blue_filled"/>
    </RelativeLayout>
</LinearLayout>